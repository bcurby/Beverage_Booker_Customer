<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCartItem"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="256dp"
            android:layout_height="49dp"
            android:maxLines="2"
            android:text="@string/name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayoutCartItem"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayoutCartItem"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="@+id/constraintLayoutCartItem"
            app:layout_constraintTop_toTopOf="@+id/constraintLayoutCartItem"
            app:layout_constraintVertical_bias="0.044" />

        <TextView
            android:id="@+id/sizeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="bottom"
            android:text="@string/size"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"

            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/commentTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cartItemName"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/cartItemSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/optionsTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/sizeTitle"
            app:layout_constraintTop_toBottomOf="@+id/cartItemName"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/commentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.502"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/cartItemComment"
            android:layout_width="115dp"
            android:layout_height="46dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.014"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.736"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/optionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/options"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/linearLayoutCartOptions"
            app:layout_constraintTop_toBottomOf="@+id/cartItemName" />

        <LinearLayout
            android:id="@+id/linearLayoutCartOptions"
            android:layout_width="90dp"
            android:layout_height="131dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cartItemName">

            <TextView
                android:id="@+id/cartItemMilk"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemSugar"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemDecaf"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemCaramel"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemChocolate"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemVanilla"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemWhippedCream"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemFrappe"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cartItemHeated"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/qtyButtonCart"
            android:layout_width="107dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            app:backGroundColor="@color/colorAccent"
            app:finalNumber="20"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCartOptions"
            app:layout_constraintStart_toStartOf="@+id/updateCartQuantityButton"
            app:layout_constraintTop_toBottomOf="@+id/QtyTitle"
            app:textColor="@color/colorPrimaryDark">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

        <Button
            android:id="@+id/updateCartQuantityButton"
            android:layout_width="107dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:text="@string/update_qty"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/deleteCartItem"
            app:layout_constraintTop_toBottomOf="@+id/qtyButtonCart" />

        <Button
            android:id="@+id/deleteCartItem"
            android:layout_width="107dp"
            android:layout_height="36dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCartOptions"
            app:layout_constraintTop_toBottomOf="@+id/updateCartQuantityButton"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/cartItemQuantity"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="28dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/QtyTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cartItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.441"
            app:layout_constraintStart_toEndOf="@+id/cartItemName"
            app:layout_constraintTop_toTopOf="@+id/cartItemName" />

        <TextView
            android:id="@+id/QtyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/qty"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toEndOf="@+id/cartItemName"
            app:layout_constraintTop_toBottomOf="@+id/cartItemPrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

