<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BookDeliveryActivity">

    <LinearLayout
        android:id="@+id/AddressGroup"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextStreetNumber"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:hint="Street Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextStreetName"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:hint="Street Name" />

        <EditText
            android:id="@+id/editTextPostCode"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:hint="Post Code"
            android:maxLength="4"
            android:inputType="number" />

        <EditText
            android:id="@+id/editTextCityTown"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:hint="City / Town" />
    </LinearLayout>

    <Button
        android:id="@+id/ProceedToPaymentButton"
        android:layout_below="@id/AddressGroup"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:paddingLeft="10dp"
        android:text="Proceed to payment" />
</RelativeLayout>