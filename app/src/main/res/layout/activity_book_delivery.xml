<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BookDeliveryActivity">

    <LinearLayout
        android:id="@+id/AddressGroup"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextStreetNumber"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:hint="Unit/Street No" />

        <EditText
            android:id="@+id/editTextStreetName"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:hint="Street Name"
            android:inputType="text"/>

        <TextView
            android:id="@+id/textViewCityTown"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:text="City: Bathurst" />

        <TextView
            android:id="@+id/textViewPostCode"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:text="Post Code: 2795" />

        <TextView
            android:id="@+id/textViewDisclaimer"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:text="The cafe only delivers to the city of Bathurst 2795" />



    </LinearLayout>

    <Button
        android:id="@+id/ProceedToPaymentButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/AddressGroup"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Proceed to payment" />
</RelativeLayout>