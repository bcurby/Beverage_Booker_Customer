<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BookDeliveryActivity">


    <EditText
        android:id="@+id/editTextUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:inputType="number"
        android:hint="Unit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextStreetName"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="24dp"
        android:hint="Street Address"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/editTextUnit"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCityTown"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="City: Bathurst"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPostCode" />

    <TextView
        android:id="@+id/textViewPostCode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Post Code: 2795"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUnit" />

    <TextView
        android:id="@+id/textViewDisclaimer"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="The cafe only delivers to the city of Bathurst 2795"
        app:layout_constraintStart_toEndOf="@+id/textViewPostCode"
        app:layout_constraintTop_toBottomOf="@+id/editTextStreetName" />

    <Button
        android:id="@+id/ProceedToPaymentButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:paddingStart="10dp"
        android:text="Proceed to payment"
        app:layout_constraintStart_toEndOf="@+id/textViewCityTown"
        app:layout_constraintTop_toBottomOf="@+id/textViewDisclaimer" />

</androidx.constraintlayout.widget.ConstraintLayout>