<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_brown"
    tools:context=".activities.BookDeliveryActivity">


    <EditText
        android:id="@+id/editTextUnit"
        android:layout_width="79dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/input_field"
        android:hint="@string/unit"
        android:inputType="number"
        android:textAlignment="center"
        android:textColorHint="@color/colorAccentDark"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextStreetName" />

    <EditText
        android:id="@+id/editTextStreetName"
        android:layout_width="277dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/input_field"
        android:hint="@string/street_address"
        android:inputType="text"
        android:textColorHint="@color/colorAccentDark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCityTown"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:text="@string/city_bathurst"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ProceedToPaymentButton" />

    <TextView
        android:id="@+id/textViewPostCode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="12dp"
        android:text="@string/post_code_2795"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewDisclaimer" />

    <Button
        android:id="@+id/ProceedToPaymentButton"
        android:layout_width="208dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/button"
        android:text="@string/proceed_to_payment"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDisclaimer" />

    <TextView
        android:id="@+id/textViewDisclaimer"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="@string/the_cafe_only_delivers_to_the_city_of_bathurst_2795"
        android:textColor="@color/design_default_color_on_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextStreetName" />

    <TextView
        android:id="@+id/textViewNeedHelpBookDelivery"
        android:layout_width="94dp"
        android:layout_height="26dp"
        android:text="@string/need_help"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccentDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProceedToPaymentButton"
        app:layout_constraintVertical_bias="0.046" />

</androidx.constraintlayout.widget.ConstraintLayout>