<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderConfirmationActivity">

    <fragment android:name="com.beveragebooker.customer_app.activities.Menubar"
        android:id="@+id/menuBarInsert"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/textViewOrderConfirm"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_below="@id/menuBarInsert"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewCountDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewOrderConfirm"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/returnToMainMenu"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/textViewCountDown"
        android:layout_centerHorizontal="true"
        android:text="Main Menu"/>'

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/returnToMainMenu"
        android:layout_centerHorizontal="true"
        android:text="start"
        android:visibility="invisible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_start_pause"
        android:layout_marginStart="11dp"
        android:layout_centerHorizontal="true"
        android:text="reset"
        android:visibility="invisible"
        tools:visibility="visible" />

</RelativeLayout>