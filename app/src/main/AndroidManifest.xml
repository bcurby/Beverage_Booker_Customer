<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beveragebooker.customer_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.OrderConfirmationActivity" />
        <activity android:name=".activities.PlaceOrderActivity" />
        <activity android:name=".activities.PaymentActivity" />
        <activity android:name=".activities.SelectOrderTypeActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.BrowseMenu" />
        <activity android:name=".activities.CreateUserActivity" />
        <activity android:name=".activities.PrimaryMenu" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>